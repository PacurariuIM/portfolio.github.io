{
  "name": "portfolio-page",
  "version": "1.0.0",
  "description": "My portfolio website",
  "scripts": {
    "build:css": "tailwindcss -i ./assets/css/main.css -o ./assets/css/styles.css",
    "watch:css": "tailwindcss -i ./assets/css/main.css -o ./assets/css/styles.css --watch",
    "dev": "concurrently \"npm run watch:css\" \"bundle exec jekyll serve\"",
    "build": "npm run build:css && bundle exec jekyll build"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "tailwindcss": "^3.3.5"
  }
} 